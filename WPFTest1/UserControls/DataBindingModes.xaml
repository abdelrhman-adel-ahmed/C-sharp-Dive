<UserControl x:Class="WPFTest1.UserControls.DataBindingModes"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFTest1.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <Slider IsSnapToTickEnabled="True" Name="slider1" Minimum="0" Maximum="100" />
        <!--if we put mode=oneway then its from the source (slider value) to the target (textbox text) -->
        <!--if we put mode=twoway then its from the source (slider value) to the target (textbox text) and vise versa 
        but slider will not automatically changed if we change the value in the text we need to leave the cursor out from 
        the text box  or press tab to get the value updated in the silder , we need to use updateSourceTrigger property -->
        <!--UpdateSourceTrigger=PropertyChanged implies that when ever the target changed we need to update the source , 
        we have for modes , default (lostfoucus) ,propertychanged ,explicit-->
        <TextBox Name="Text1" Width="50" Text="{Binding ElementName=slider1, Path=Value ,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" />
    </StackPanel>
</UserControl>
